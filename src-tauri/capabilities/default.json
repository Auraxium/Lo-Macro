{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "shell:default",
    "shell:allow-spawn",
    "shell:allow-execute",
    "shell:allow-kill",
    "shell:allow-stdin-write",
     {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "spawner",
          "cmd": "node",
          "args": [
            "server.js"
          ]
        }
      ]
    }
  ]
}